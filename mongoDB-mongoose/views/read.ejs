<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read</title>
    <link rel="stylesheet" href="./css/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 text-zinc-100">
        <div class="form p-10">
            <% if(success && success.length > 0) { %>
                <div class="toast text-white p-3 rounded-md bg-green-600">
                    <p><%= success[0] %></p>
                </div>
            <% } else if(error && error.length > 0) { %>
                <div class="toast text-white p-3 rounded-md bg-red-600">
                    <p><%= error[0] %></p>
                </div>
            <% } %>
            <div class="nav">
                <a class="text-blue-500 inline-block mt-3" href="/">Go Back Home</a>
            </div>
            <h1 class="text-4xl font-bold mb-3">All Users</h1>
            <div class="users flex flex-wrap gap-5">
                <% if(users.length > 0){ %>
                    <% users.forEach(user => { %>
                        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                            <div class="w-full h-52 rounded-lg bg-zinc-700">
                                <img class="w-full h-full object-cover" src="<%= user.image %>" alt="User Image">
                            </div>
                            <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                            <h5 class="text-zinc-500"><%= user.email %></h5>
                            <div class="flex gap-3 mt-10">
                                <a class="bg-blue-600 px-5 py-2 rounded-md" href="/edit/<%= user._id %>">Edit</a>
                                <a class="bg-red-600 px-5 py-2 rounded-md" href="/delete/<%= user._id %>">Delete</a>
                            </div>
                        </div>
                    <% }) %>
               <% } else { %>
                <h5 class="text-zinc-500">No User Found</h5>
               <% } %>
            </div>
        </div>
    </div>
    <script src="./js/scripts.js"></script>
</body>
</html>